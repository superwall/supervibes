{
  "permissions": {
    "allow": [
      "Bash(brew install:*)",
      "Bash(mkdir:*)",
      "Bash(gh repo create:*)",
      "Bash(scripts/run:*)",
      "Bash(scripts/install:*)",
      "Bash(scripts/build:*)",
      "Bash(scripts/xcode:*)",
      "Bash(xcodegen:*)",
      "WebSearch",
      "Bash(xcodebuild:*)",
      "Bash(xcrun:*)",
      "Bash(open:*)"
    ],
    "deny": []
  },
  "hooks": {
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Blow.aiff"
          },
          {
            "type": "command",
            "command": "xcodegen generate"
          }
        ]
      }
    ]
  }
}
